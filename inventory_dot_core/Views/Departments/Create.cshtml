@using inventory_dot_core.Classes
@model inventory_dot_core.Models.Departments

@{
    ViewData["Title"] = $"{Dictionary.frasesDictionary["Create"]} подразделение";
}

<h1>@Dictionary.frasesDictionary["Create"]</h1>

<h4>Подразделение</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DepartmentRegionId" class="control-label"></label>
                <select asp-for="DepartmentRegionId" class="form-control" asp-items="ViewBag.DepartmentRegionId"></select>
            </div>
            <div class="form-group">
                <label asp-for="DepartmentName" class="control-label"></label>
                <input asp-for="DepartmentName" class="form-control" />
                <span asp-validation-for="DepartmentName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DepartmentNotes" class="control-label"></label>
                <input asp-for="DepartmentNotes" class="form-control" />
                <span asp-validation-for="DepartmentNotes" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DepartmentParentId" class="control-label"></label>
                <select asp-for="DepartmentParentId" class="form-control" asp-items="ViewBag.DepartmentParentId"></select>
            </div>
            <div class="form-group">
                <partial name="_SaveButton" /> | <partial name="_BackButton" />
            </div>
        </form>
    </div>
</div>

<script src="~/js/scripts/department.js"></script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
