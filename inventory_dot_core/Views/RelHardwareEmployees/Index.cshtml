@model inventory_dot_core.Classes.Paging.PagingList<inventory_dot_core.Models.RelHardwareEmployee>
@using inventory_dot_core.Classes;

@{
    ViewData["Title"] = $"Рабочее место сотрудника: {ViewBag.EmployeeName}";
}

<h1>Рабочее место сотрудника: @ViewBag.EmployeeName</h1>

<p>
    <a asp-action="Create" class="btn btn-mdb-color btn-sm"
       asp-route-employee_id="@ViewBag.EmployeeId"
       asp-route-page="@Model.PageIndex"
       asp-route-filter="@ViewBag.Filter"
       asp-route-sortExpression="@ViewBag.SortExpression">
        Добавить оборудование
    </a> |
    <a class="btn btn-mdb-color btn-sm"
       asp-controller="Employees"
       asp-action="Index"
       asp-route-filter="@ViewBag.EmpFilter"
       asp-route-sortExpression="@ViewBag.EmpSortExpression"
       asp-route-page="@ViewBag.EmpPage">
        Назад
    </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RelheWhard)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.RelheWhard.WhardName)
                </td>
                <td>                    
                    <a asp-action="Delete" class="btn btn-mdb-color btn-sm"
                       asp-route-employee_id="@ViewBag.EmployeeId"
                       asp-route-id="@item.RelheId"
                       asp-route-page="@Model.PageIndex"
                       asp-route-filter="@ViewBag.Filter"
                       asp-route-sortExpression="@ViewBag.SortExpression">@Dictionary.frasesDictionary["Delete"]</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<nav>
    <partial name="_PagerPartial" />
</nav>
