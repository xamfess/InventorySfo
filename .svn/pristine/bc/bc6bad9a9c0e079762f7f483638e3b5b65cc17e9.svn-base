@using inventory_dot_core.Classes
@model inventory_dot_core.Models.Offices

@{
    ViewData["Title"] = $"Редактироваие помещения {Model.OfficeName}";
}

<h1>@Dictionary.frasesDictionary["Edit"]</h1>

<h4>Помещения</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="OfficeId" />

            <table class="table-borderless">
                <thead>
                    <tr>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tr>
                    <td><label asp-for="OfficeHouses.HousesRegion.RegionId" class="control-label"></label></td>
                    <td><select asp-for="OfficeHouses.HousesRegion.RegionId" class="form-control" asp-items="ViewBag.OfficeRegionId"></select></td>
                </tr>
                <tr>
                    <td><label asp-for="OfficeHousesId" class="control-label"></label></td>
                    <td>
                        <select asp-for="OfficeHousesId" class="form-control" asp-items="ViewBag.OfficeHousesId"></select>
                        <span asp-validation-for="OfficeHousesId" class="text-danger"></span>
                    </td>
                </tr>
                <tr>
                    <td><label asp-for="OfficeName" class="control-label"></label></td>
                    <td>
                        <input asp-for="OfficeName" class="form-control" />
                        <span asp-validation-for="OfficeName" class="text-danger"></span>
                    </td>
                </tr>
                <tr>
                    <td><label asp-for="OfficeNotes" class="control-label"></label></td>
                    <td>
                        <input asp-for="OfficeNotes" class="form-control" />
                        <span asp-validation-for="OfficeNotes" class="text-danger"></span>
                    </td>
                </tr>
                <tr>
                    <td><label asp-for="OfficeIsStore" class="form-check-label"></label></td>
                    <td>
                        @Html.CheckBox("OfficeIsStore", Convert.ToBoolean(Model.OfficeIsStore))
                        <span asp-validation-for="OfficeIsStore" class="text-danger"></span>
                    </td>
                </tr>
            </table>

            <p>
                <div class="form-group">
                    <partial name="_SaveButton" /> | <partial name="_BackButton" />
                </div>
            </p>
        </form>
    </div>
</div>

<script src="~/js/scripts/house.js"></script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
