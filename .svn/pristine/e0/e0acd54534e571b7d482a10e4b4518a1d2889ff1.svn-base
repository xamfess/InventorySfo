@model inventory_dot_core.Models.Employees

@{
    ViewData["Title"] = "Create";
}

<h1>Новый</h1>

<h4>Сотрудник</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="EmployeeId" />
            <div class="form-group">
                <label asp-for="EmployeeRegionId" class="control-label"></label>
                <select asp-for="EmployeeRegionId" class="form-control" asp-items="ViewBag.EmployeeRegionId"></select>
                <span asp-validation-for="EmployeeRegionId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmployeeFirstname" class="control-label"></label>
                <input asp-for="EmployeeFirstname" class="form-control" />
                <span asp-validation-for="EmployeeFirstname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmployeeLastname" class="control-label"></label>
                <input asp-for="EmployeeLastname" class="form-control" />
                <span asp-validation-for="EmployeeLastname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmployeeMiddlename" class="control-label"></label>
                <input asp-for="EmployeeMiddlename" class="form-control" />
                <span asp-validation-for="EmployeeMiddlename" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmployeePhoneHome" class="control-label"></label>
                <input asp-for="EmployeePhoneHome" class="form-control" />
                <span asp-validation-for="EmployeePhoneHome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmployeeEmail" class="control-label"></label>
                <input asp-for="EmployeeEmail" class="form-control" />
                <span asp-validation-for="EmployeeEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmployeePositionId" class="control-label"></label>
                <select asp-for="EmployeePositionId" class="form-control" asp-items="ViewBag.EmployeePositionId"></select>
                <span asp-validation-for="EmployeePositionId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmployeeOfficeId" class="control-label"></label>
                <select asp-for="EmployeeOfficeId" class="form-control" asp-items="ViewBag.EmployeeOfficeId"></select>
                <span asp-validation-for="EmployeeOfficeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmployeePhoneWork" class="control-label"></label>
                <input asp-for="EmployeePhoneWork" class="form-control" />
                <span asp-validation-for="EmployeePhoneWork" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmployeeNote" class="control-label"></label>
                <input asp-for="EmployeeNote" class="form-control" />
                <span asp-validation-for="EmployeeNote" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmployeeFullFio" class="control-label"></label>
                <input asp-for="EmployeeFullFio" class="form-control" />
                <span asp-validation-for="EmployeeFullFio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="form-check">
                    <label asp-for="EmployeeIsRespons" class="form-check-label">
                        @Html.DisplayNameFor(model => model.EmployeeIsRespons) @Html.CheckBox("EmployeeIsRespons", false)
                    </label>
                </div>
                <span asp-validation-for="EmployeeIsRespons" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="form-check">
                    <label asp-for="EmployeeIsMol" class="form-check-label">
                        @Html.DisplayNameFor(model => model.EmployeeIsMol) @Html.CheckBox("EmployeeIsMol", false)
                    </label>
                </div>
                <span asp-validation-for="EmployeeIsMol" class="text-danger"></span>
            </div>
            <div class="form-group">
                <partial name="_SaveButton" /> | <partial name="_BackButton" />
            </div>
        </form>
    </div>
</div>

<script src="~/js/scripts/employee.js"></script>

