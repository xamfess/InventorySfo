@using inventory_dot_core.Classes
@model inventory_dot_core.Models.RelOfficeResponsEmployee

@{
    ViewData["Title"] = $"{Dictionary.frasesDictionary["Create"]} ответственного";
}

    <h1>@Dictionary.frasesDictionary["Create"]</h1>

<h4>Ответственный</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RoeOffice.OfficeHouses.HousesRegionId" class="control-label"></label>
                <select asp-for="RoeOffice.OfficeHouses.HousesRegionId" class="form-control" asp-items="ViewBag.OfficeRegionId"></select>
            </div>
            <div class="form-group">
                <label asp-for="RoeOffice.OfficeHousesId" class="control-label"></label>
                <select asp-for="RoeOffice.OfficeHousesId" class="form-control" asp-items="ViewBag.OfficeHousesId"></select>
            </div>

            <div class="form-group">
                <label asp-for="RoeOfficeId" class="control-label"></label>
                <select asp-for="RoeOfficeId" class="form-control" asp-items="ViewBag.RoeOfficeId"></select>
            </div>
            <div class="form-group">
                <label asp-for="RoeEmployeeId" class="control-label"></label>
                <select asp-for="RoeEmployeeId" class="form-control" asp-items="ViewBag.RoeEmployeeId"></select>
            </div>
            <div class="form-group">
                <partial name="_SaveButton" /> | <partial name="_BackButton" />
            </div>
        </form>
    </div>
</div>

<script src="~/js/scripts/emp_office.js"></script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
