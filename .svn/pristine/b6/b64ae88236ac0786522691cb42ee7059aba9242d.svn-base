@using inventory_dot_core.Classes
@model inventory_dot_core.Classes.Paging.PagingList<inventory_dot_core.Models.Positions>

@{
    ViewData["Title"] = "Должности";
}


<partial name="_FilterPartial" />


<h1>Должности</h1>

<p>
    <partial name="_CreateButton" />
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.SortableHeaderFor(model => model.PositionName, "PositionName")
            </th>
            <th>
                @Html.SortableHeaderFor(model => model.PositionDepartment, "PositionDepartment")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PositionName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PositionDepartment.DepartmentName)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-mdb-color btn-sm"
                   asp-route-id="@item.PositionId"
                   asp-route-page="@Model.PageIndex"
                   asp-route-filter="@ViewBag.Filter"
                   asp-route-sortExpression="@ViewBag.SortExpression"><i class="fas fa-pencil-alt fa-lg"></i></a> |
                <a asp-action="Delete" class="btn btn-mdb-color btn-sm"
                   asp-route-id="@item.PositionId"
                   asp-route-page="@Model.PageIndex"
                   asp-route-filter="@ViewBag.Filter"
                   asp-route-sortExpression="@ViewBag.SortExpression"><i class="fas fa-trash-alt fa-lg"></i></a>
            </td>
        </tr>
        }
    </tbody>
</table>

<nav>
    <partial name="_PagerPartial" />
</nav>
