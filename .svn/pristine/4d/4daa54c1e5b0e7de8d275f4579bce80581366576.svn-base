@model inventory_dot_core.Classes.Paging.PagingList<inventory_dot_core.Models.Houses>

@{
    ViewData["Title"] = "Строения";
}

<partial name="_FilterPartial" />


<h1>Строения</h1>
<p>
    <partial name="_CreateButton" />
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.SortableHeaderFor(model => model.HousesName, "HousesName")
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HousesRem)
            </th>
            <th>
                @Html.SortableHeaderFor(model => model.HousesRegion, "HousesRegion,HousesName")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.HousesName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HousesRem)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HousesRegion.RegionName)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-mdb-color btn-sm"
                   asp-route-id="@item.HousesId"
                   asp-route-page="@Model.PageIndex"
                   asp-route-filter="@ViewBag.Filter"
                   asp-route-sortExpression="@ViewBag.SortExpression"><i class="fas fa-pencil-alt fa-lg"></i></a> |
                <a asp-action="Delete" class="btn btn-mdb-color btn-sm"
                   asp-route-id="@item.HousesId"
                   asp-route-page="@Model.PageIndex"
                   asp-route-filter="@ViewBag.Filter"
                   asp-route-sortExpression="@ViewBag.SortExpression"><i class="fas fa-trash-alt fa-lg"></i></a>
            </td>
        </tr>
        }
    </tbody>
</table>

<nav>
    <partial name="_PagerPartial" />
</nav>
